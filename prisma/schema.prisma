generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  texts Text[]
  characters Character[]
  rpgGame RpgGame[]

  @@map("users")
}

model Character {
  id String @id @default(uuid())
  name String
  race String
  group String
  level Int
  attributes String
  abilities String

  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])

  rpgGameId String? @map("rpg_game_id")
  rpgGame RpgGame? @relation(fields: [rpgGameId], references: [id])

  @@map("characters")
}

model GameRule {
  id String @id @default(uuid())
  name String
  description String

  rpgGameId String @map("rpg_game_id")
  rpgGame RpgGame @relation(fields: [rpgGameId], references: [id])

  @@map("game_rules")
}

model Permission {
  id String @id @default(uuid())
  name String
  description String

  rpgGameId String @map("rpg_game_id")
  rpgGame RpgGame @relation(fields: [rpgGameId], references: [id])

  @@map("permissions")
}

model RpgGame {
  id String @id @default(uuid())
  name String
  description String

  characters Character[]
  gameRules GameRule[]
  permissions Permission[]
  texts Text[]
  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])

  @@map("rpg_games")
}

model Text {
  id String @id @default(uuid())
  text String
  author String
  dateH String
  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])
  rpgGameId String @map("rpg_game_id")
  rpgGame RpgGame @relation(fields: [rpgGameId], references: [id])
  @@map("texts")
}